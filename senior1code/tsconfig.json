{
	"compilerOptions": {
	  "module": "commonjs",
	  "target": "ES2020",
	  "outDir": "out",
	  "lib": ["ES2020", "DOM"],
	  "sourceMap": true,
	  "rootDir": "src",
	  "strict": true,
	  "types": ["node", "mocha"],
	  "esModuleInterop": true,
	  "moduleResolution": "node",
	  "skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
  }